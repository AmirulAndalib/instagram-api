root = true

[*]
charset = utf-8
trim_trailing_whitespace = true

[*.{py, rst, ini}]
indent_style = space
indent_size = 4
end_of_line = crlf

[*.py]
line_length = 120
insert_final_newline = false

[*.{js, html, scss, css, yml}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2